@model FactsGreet.Web.ViewModels.Home.StatusCodePageViewModel
@{
    ViewBag.Title = $"Error {Model.StatusCode}";
}

<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col-auto">
            <img src="~/images/oops-monkey.png" 
                 alt="Oops monkey"
                 class="img-fluid">
        </div>
        <div class="col"></div>
    </div>
    <div class="row">
        <div class="col text-center">
            <div class="py-5 px-2">
                <h1>
                    Oops!</h1>
                <h2>@Model.StatusCode - @Model.StatusText</h2>
                <div class="my-2">
                    Sorry, an error has occured!
                </div>
                <div>
                    <a asp-controller="Home"
                       asp-action="Index"
                       class="btn btn-primary btn-lg">Take Me Home</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section StyleLinks
{
        <link href="~/css/error.css" rel="stylesheet" asp-append-version="true" />
}
