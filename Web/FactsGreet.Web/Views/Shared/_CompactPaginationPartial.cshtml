@model FactsGreet.Web.ViewModels.Shared.CompactPaginationViewModel
<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col-auto m-1">
            <a asp-route="@Model.Route"
               asp-all-route-data="Model.GetAllRouteDataForPage(Model.CurrentPage - 1)"
               class="btn btn-secondary">
                Previous
            </a>
        </div>
        <div class="col-auto m-1">
            <a asp-route="@Model.Route"
               asp-all-route-data="Model.GetAllRouteDataForPage(Model.CurrentPage + 1)"
               class="btn btn-secondary">
                Next
            </a>
        </div>
        <div class="col"></div>
    </div>
</div>
